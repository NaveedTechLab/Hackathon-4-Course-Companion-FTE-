# ===========================================
# Phase 2: Premium API Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file with real credentials!

# OpenRouter API Configuration (for LLM features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-3.5-turbo

# Claude API Configuration (alternative to OpenRouter)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# Cloudflare R2 Configuration (Content Storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=course-companion-fte

# JWT Authentication
SECRET_KEY=your_super_secret_jwt_key_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
PREMIUM_TIER_COST_PER_THOUSAND_TOKENS=0.015

# Token Usage Limits
TOKEN_USAGE_LIMIT_PER_USER_PER_DAY=100000

# ===========================================
# How to get these keys:
# ===========================================
# OpenRouter: https://openrouter.ai/keys
# Claude: https://console.anthropic.com/
# Neon DB: https://neon.tech/
# Cloudflare R2: https://dash.cloudflare.com/
# ===========================================
